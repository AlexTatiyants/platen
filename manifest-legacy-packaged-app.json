{
  "name": "platen",
  "description": "Markdown WordPress Editor",
  "version": "1.0",
  "manifest_version": 2,
  "app": {
    "launch": {
      "local_path": "index.html"
    }
  },
  "permissions": [
      "storage",
      "unlimitedStorage",
      "clipboardRead",
      "clipboardWrite",
      "fontSettings",
      "http://*/",
      "https://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "images/icon_16.png",
    "128": "images/icon_128.png"
  }
}