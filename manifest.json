{
  "name": "platen",
  "description": "Markdown WordPress Editor",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },

  "sandbox": {
    "pages": ["views/donate-sandbox.html"]
  },

  "permissions": [
      "experimental",
      "storage",
      "unlimitedStorage",
      "clipboardRead",
      "clipboardWrite",
      "http://*/",
      "https://*/"
  ],
  "icons": {
    "16": "images/icon_16.png",
    "128": "images/icon_128.png"
  }
}